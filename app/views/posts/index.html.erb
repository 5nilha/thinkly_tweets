<div class="header">
      <div class="container">
        <h1>threadly</h1>
      </div>
    </div>

    <div class="main">
      <div class="container">
        
        <!-- here is the form to create the new post -->
		<%= form_for @new_post do |f| %>
			<%= f.text_field :comment%>
			<br>
			<%= f.submit "Post" %>
		<% end %>

        <!-- Here we render all posts -->
        <ul class="comments">
          <% @all_posts.each do |post|%>
		  	<li><%= post.comment %></li> 
		  <% end %>
        </ul>

      </div>
    </div>